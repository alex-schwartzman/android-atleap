<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="AppTheme.FullScreen" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily" tools:ignore="NewApi">fonts/Roboto-Regular.ttf"</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextView.Small" parent="TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextView.Micro" parent="TextView">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="TextView.Large" parent="TextView">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>
