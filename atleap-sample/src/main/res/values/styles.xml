<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#3F51B5</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#303F9F</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">#F50057</item>

          <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>

    <style name="AppTheme.FullScreen" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily" tools:ignore="NewApi">fonts/Roboto-Regular.ttf"</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextView.Small" parent="TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextView.Micro" parent="TextView">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="TextView.Large" parent="TextView">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>
